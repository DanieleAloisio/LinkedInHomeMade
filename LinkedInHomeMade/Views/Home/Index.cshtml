@section scripts {
    <script type="text/javascript">

    $(document).ready(function(){



    });

        $("#btnOpenModaleModificaProfilo").click(function () {

            $('#mdlModProf').modal('show');
        });

        $("#btnOpenModaleInseriscSkill").click(function () {

           $('#mdlAddSkill').modal('show');
        });

        $('#btnInserisciSkill').click(function () {

            var tag = $("#Tag").val()

                $.ajax({
                url: "@Url.Action("AggiungiSkill", "Home")",
                type: "POST",
                datatype: 'json',
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                data: { tag: tag },
                success: function (jqXHR, exception) {

                    $("#mdlAddSkill").modal("hide");

                    location.reload();
                }
            });
        });

        $("#btnModifica").click(function () {

            var nome = $("#Nome").val()
            var cognome = $("#Cognome").val()
            var professione = $("#Professione").val()
            var paese = $("#Paese").val()
            var citta = $("#Citta").val()
            var informazioni = $("#Informazioni").val()
            var mobile = $("#Mobile").val()

            var website = $("#Website").val()
            var instagram = $("#Instagram").val()
            var github = $("#Github").val()
            var facebook = $("#Facebook").val()
            var twitter = $("#Twitter").val()

            $.ajax({
                url: "@Url.Action("ModificaProfilo", "Home")",
                type: "POST",
                datatype: 'json',
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                data: { nome: nome,
                cognome: cognome,
                professione: professione,
                paese: paese,
                citta: citta,
                informazioni: informazioni,
                mobile: mobile,
                website: website,
                instagram: instagram,
                github: github,
                facebook: facebook,
                twitter: twitter },
                success: function (jqXHR, exception) {

                    $("#mdlModProf").modal("hide");

                    location.reload();
                }
            });
        });

    </script>
}
