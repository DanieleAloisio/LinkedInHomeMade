@model ApplicationUserModel
@{
    ViewData["Title"] = "Contatti";
}

<div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="/Home/Index" role="tab" aria-controls="profile" aria-selected="false">Me</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="/Home/Contatti" role="tab" aria-controls="contact" aria-selected="false">Contact</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">fdsfsd</div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab"></div>
    </div>
    <div class="row gutters-sm">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="https://cdn1.vectorstock.com/i/1000x1000/94/65/bald-man-avatar-icon-vector-6759465.jpg" alt="Admin" class="rounded-circle" width="150">
                        <div class="row">
                            <div class="col-10 mt-3">
                                <h4>@Model.Nome</h4>
                                <p class="text-secondary mb-1">@Model.Professione</p>
                                <p class="text-muted font-size-sm">@Model.Paese, @Model.Citta</p>
                            </div>
                            <div class="col-1">
                                <button type="button" id="btnOpenModaleModificaProfilo" name="btnModificaProfilo" class="btn btn-outline-secondary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-secondary">
                                @Model.Informazioni
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

