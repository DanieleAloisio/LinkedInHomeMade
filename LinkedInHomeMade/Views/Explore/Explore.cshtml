@model List<ApplicationUserModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="main-body">
        <div class="row justify-content-center mt-5 ml-5">
            <div class="col-12 col-sm-8 col-lg-6">
                <!-- Section Heading-->
                <div class="section_heading text-center wow fadeInUp" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                    <h2 class="d-flex align-items-center mb-3">Diventa <i class="material-icons text-info ml-2 mr-2">Fan</i> di chi vuoi!</h2>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            @foreach (var item in Model.OrderBy(x => x.TipoGruppo))
            {
                <!-- Single Advisor-->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="single_advisor_profile wow fadeInUp" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInUp;">
                        <!-- Team Thumb-->
                        <div class="advisor_thumb">
                            <img src="@item.ImageProfile" style="width: 15rem;" alt="">
                        </div>
                        <!-- Team Details-->
                        <a href="@Url.Action("ViewProfile", "Explore", new { idProfilo = item.IdProfilo })">
                            <div class="single_advisor_details_info">

                                <h6>@item.Nome</h6>
                                <p class="designation">@item.Professione</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>