@model LinkedInHomeMade.Models.SkillViewModel


<div class="modal fade" id="mdlAddSkill" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Inserisci Skill</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <h6 class="mb-0"><label asp-for="@Model.Descrizione"></label></h6>
                                <input type="text" asp-for="@Model.Descrizione" class="form-control w-75" />
                            </div>
                            <div class="form-group">
                                <h6 class="mb-0"><label asp-for="@Model.Tag"></label></h6>
                                <input type="text" asp-for="@Model.Tag" class="form-control w-75" />
                            </div>
                            <div class="form-group">
                                <h6 class="mb-0"><label asp-for="@Model.Competenza"></label></h6>
                                <input type="range" class="form-control-range w-75" id="formControlRange" min="0" max="5" step="1" >
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
                <button type="button" id="btnModifica" name="btnInserisciSkill" class="btn btn-primary">Inserisci</button>
            </div>

        </div>
    </div>
</div>