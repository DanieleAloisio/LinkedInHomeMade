@model LinkedInHomeMade.Models.SkillViewModel


<div class="modal fade" id="mdlAddSkill" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Inserisci Skill</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <h6 class="mb-0"><label asp-for="@Model.Tag"></label></h6>
                                <input asp-for="@Model.Tag"class="form-control" data-role="tagsinput" type="text">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
                <button type="button" id="btnInserisciSkill" name="btnInserisciSkill" class="btn btn-primary">Inserisci</button>
            </div>

        </div>
    </div>
</div>
